<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WGUMobileLegit"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.WGUMobileLegit">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TermListActivity"></activity>
        <activity android:name=".TermAddActivity"></activity>
        <activity android:name=".TermEditActivity"></activity>
        <activity android:name=".TermStartDateActivity"></activity>
        <activity android:name=".TermEndDateActivity"></activity>
        <activity android:name=".TermViewActivity"></activity>
        <activity android:name=".CourseListActivity"></activity>
        <activity android:name=".CourseAddActivity"></activity>
        <activity android:name=".CourseEditActivity"></activity>
        <activity android:name=".CourseStartDateActivity"></activity>
        <activity android:name=".CourseEndDateActivity"></activity>
        <activity android:name=".CourseViewActivity"></activity>
        <activity android:name=".TermAddCourseActivity"></activity>
        <activity android:name=".AssessmentListActivity"></activity>
        <activity android:name=".AssessmentAddActivity"></activity>
        <activity android:name=".AssessmentEditActivity"></activity>
        <activity android:name=".AssessmentDueDateActivity"></activity>
        <activity android:name=".AssessmentStartDateActivity"></activity>
        <activity android:name=".AssessmentViewActivity"></activity>
        <activity android:name=".CourseAddAssessmentActivity"></activity>
        <activity android:name=".MentorListActivity"></activity>
        <activity android:name=".MentorAddActivity"></activity>
        <activity android:name=".MentorEditActivity"></activity>
        <activity android:name=".MentorViewActivity"></activity>
        <activity android:name=".CourseAddMentorActivity"></activity>
        <receiver
            android:name=".MyAlarmReceiver"
            android:enabled="true"
            android:exported="true">
        </receiver>
    </application>
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
</manifest>