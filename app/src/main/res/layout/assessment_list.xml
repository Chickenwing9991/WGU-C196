<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/AssessmentsTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assessments"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/AssessmentList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/viewAssessment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Assessment Details" />

        <Button
            android:id="@+id/AddAssessment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Assessment" />

        <Button
            android:id="@+id/EditAssessment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Assessment" />

        <Button
            android:id="@+id/DeleteAssessment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Assessment" />

        <Button
            android:id="@+id/BackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>